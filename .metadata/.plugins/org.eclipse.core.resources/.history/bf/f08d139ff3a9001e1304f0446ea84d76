package Test;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class tett extends JLayeredPane {

    private JLabel lblChatIcon;
    private JLabel lblUsersIcon;
    private JPanel selectionCircle;

    private Color _primaryLightBlue = new Color(173, 216, 230);

    public tett() {
        setBounds(91, 790, 155, 55);

        // Use a JLayeredPane for better layering control
        setLayout(null);

        lblChatIcon = new JLabel();
        lblChatIcon.setIcon(new ImageIcon("path/to/chatIcon.png")); // Replace with the actual path
        lblChatIcon.setHorizontalAlignment(JLabel.CENTER);
        add(lblChatIcon, JLayeredPane.PALETTE_LAYER);

        lblUsersIcon = new JLabel();
        lblUsersIcon.setIcon(new ImageIcon("path/to/usersIcon.png")); // Replace with the actual path
        lblUsersIcon.setHorizontalAlignment(JLabel.CENTER);
        add(lblUsersIcon, JLayeredPane.PALETTE_LAYER);

        // Create a circle panel to act as the selection indicator
        selectionCircle = new JPanel();
        selectionCircle.setSize(20, 20);
        selectionCircle.setBackground(Color.RED);
        selectionCircle.setBorder(new RoundedBorder(_primaryLightBlue, 0, 100));
        add(selectionCircle, JLayeredPane.PALETTE_LAYER);

        // Initial position of the selection circle
        moveSelectionCircle(lblChatIcon.getX(), lblChatIcon.getY());

        // Add ActionListener to switch the selection
        lblChatIcon.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                moveSelectionCircle(lblChatIcon.getX(), lblChatIcon.getY());
            }
        });

        lblUsersIcon.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                moveSelectionCircle(lblUsersIcon.getX(), lblUsersIcon.getY());
            }
        });
    }

    // Method to move the selection circle to the specified coordinates
    private void moveSelectionCircle(int x, int y) {
        selectionCircle.setLocation(x + (lblChatIcon.getWidth() - selectionCircle.getWidth()) / 2,
                y + lblChatIcon.getHeight() - selectionCircle.getHeight() / 2);
    }

    public static void main(String[] args) {
        JFrame frame = new JFrame("TabBarPanel Example");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        TabBarPanel tabBarPanel = new TabBarPanel();
        frame.add(tabBarPanel);

        frame.setSize(300, 200);
        frame.setLocationRelativeTo(null);
        frame.setVisible(true);
    }
}

